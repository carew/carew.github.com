{% extends 'vendor/lyrixx/my-theme-bootstrap/layouts/default.html.twig'%}

{% block nav_left %}
    {{ parent() }}
    <li class="divider-vertical"></li>
    <li class="dropdown">
         <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Table of content
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            {% if document.toc is defined and document.toc.0 is defined%}
                {% for item in document.toc.0 %}
                    <li><a href="#{{ item.id}}">{{ item.title }}</a></li>
                {% endfor %}
            {% endif %}
        </ul>
    </li>
{% endblock %}
